programa {
              inteiro nr_agencia = 1, nr_conta = 1, nr_agencia
     real saldo = 1500.00, limite = 500, total =  saldo + limite, saque, deposito, diferenca 
    real opercao_credito [1000], operacao_debito [1000]
     caracter voltar                              
     funcao inicio () 
  {
       inteiro senha, conta, agencia
       preencheVetor()
       escreva  ("Informe o numero da agencia") 
       leia(agencia)
       escreva("\nIforme o numero da conta: ") 
       leia(senha)
       limpa() 
       enquanto (nr_agencia!=agencia ou nr_conta != conta ou nr_senha != senha) 
       chama_menu()
  
  }
